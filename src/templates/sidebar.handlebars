<h1 class="i-sidebar-title h4 mt-4">
	<img class="i-sidebar-logo mr-2" src="{{logo}}" height="40" alt="">
	{{name}}
</h1>

<div class="relative mt-3 mb-2 px-0">
	<div class="i-search-input">
		<input id="search-filter" name="filter" type="search" placeholder="Search" class="form-control i-sidebar-item-filter">
		<label for="search-filter" class="search-input-icon icon-search"></label>
		<button type="button" class="i-search-input-reset" aria-label="Clear">
			<i class="icon-cross"></i>
		</button>
	</div>
</div>

{{#each groups}}
	<div class="i-sidebar-list-group">

		<h5
			class="pt-4 mb-1"
			data-filter-value="{{#each docs}} {{name}} {{/each}}"
		>
			<a href="#category-{{slug}}" class="i-sidebar-list-item">
				<b>{{key}}</b>
			</a>
		</h5>

		<div>
			{{#each docs}}
				<a
					href="#{{slug}}"
					class="i-sidebar-list-item"
					data-filter-value="{{name}}"
				>
					<span>{{name}}</span>
				</a>
			{{/each}}
		</div>

	</div>
{{/each}}

<div class="i-sidebar-filter-no-results i-muted i-pad-horiz-2">
	No matches.
</div>

<div class="row no-gutters mt-auto py-4">
	<span class="col">
		<span class="i-muted">Generated by</span>
		<a class="i-muted -hover" href="https://github.com/nextbigsoundinc/stylemark">Stylemark</a>
	</span>
</div>
